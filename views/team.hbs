<link rel="stylesheet" href="/stylesheets/team.css">
<script src='/javascripts/team.js'></script>
<div class="container-fluid team-page">
    <p class="my-team"> My teams </p>
    <!-- Modal create team -->
    <div class="modal fade" id="createTeamModal" tabindex="-1" role="dialog" aria-labelledby="createTeamModalTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header justify-content-center team-divider">
                    <h5 class="modal-titler" id="createTeamModalTitle">Team name</h5>
                </div>
                <div class="modal-body">
                    <div class="row justify-content-center">
                        <input type="text" class="myteam-input" id="teamname" placeholder="Enter team name">
                    </div>
                </div>
                <div class="modal-footer justify-content-center team-divider">
                    <div class="row">
                        <button type="button" class="btn btn-primary okBtn" id="okBtn">Ok</button>
                        <button type="button" class="btn btn-secondary cancelBtn" id="cancelBtn"
                            data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal delete memeber -->
    <div class="modal fade" id="deleteMemberModal" tabindex="-1" role="dialog" aria-labelledby="deleteMemberModalTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header justify-content-center team-divider">
                    <h5 class="modal-titler" id="deleteMemberModalTitle">Do yout want to delete this member?</h5>
                </div>
                <div class="modal-footer justify-content-center team-divider">
                    <div class="row">
                        <button type="button" class="btn btn-primary okBtn" id="delMemberBtn">Yes</button>
                        <button type="button" class="btn btn-secondary cancelBtn" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal delete team -->
    <div class="modal fade" id="deleteTeamModal" tabindex="-1" role="dialog" aria-labelledby="deleteTeamModalTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header justify-content-center team-divider">
                    <h5 class="modal-titler" id="deleteTeamModalTitle">Do yout want to delete this team?</h5>
                </div>
                <div class="modal-footer justify-content-center team-divider">
                    <div class="row">
                        <button type="button" class="btn btn-primary okBtn" id="delTeamBtn">Yes</button>
                        <button type="button" class="btn btn-secondary cancelBtn" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal add member -->
    <form action="/team/add" method="POST" id="inviteForm" autocomplete="off"> 
        <div class="modal fade" id="addMoreMemberModal" tabindex="-1" role="dialog"
            aria-labelledby="addMoreMemberModalTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header team-divider">
                        <h5 class="modal-titler pl-4" id="addMoreMemberModalTitle">Invite members</h5>
                    </div>
                    <div class="modal-body">
                        <form method="POST" id="inviteForm">
                            <div class="row justify-content-center">
                                <div class="input-boxes">
                                    <div class="pt-2">
                                        <input type="email" class="myteam-input" id="member1" name="member1"
                                            placeholder="Member's email" autocomplete="new-email">
                                    </div>
                                    <div class="pt-2">
                                        <input type="email" class="myteam-input" id="member2" name="member2"
                                            placeholder="Member's email" autocomplete="new-email">
                                    </div>
                                    <div class="pt-2">
                                        <input type="email" class="myteam-input" id="member3" name="member3"
                                            placeholder="Member's email" autocomplete="new-email">
                                    </div>
                                </div>
                            </div>
                            <button type="button" class="memberIncresement"> + member </button>
                            <div class="row justify-content-center">
                                <button type="submit" class="btn btn btn-primary inviteBtn" data-dismiss="modal">Invite
                                    members</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <div class="d-flex flex-wrap align-items-start">
        {{!-- button + phải có team.js --}}
        <button type="button" class="select-box" data-toggle="modal" data-target="#createTeamModal">
            <svg viewBox="0 0 16 16" class="bi bi-plus-circle-fill add-icon" fill="currentColor"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                    d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
            </svg>
        </button>
        {{#each teams}}
        <div class="team-cards pl-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h4 class="card-title">{{name}}</h4>
                    {{#each ./ownerInfo}}
                    {{assign 'ownerName' ./user_name}}
                    <div class="pt-1 d-flex justify-content-between">
                        <div class="d-inline" style="font-size: 1.25rem;">{{@root.ownerName}}</div>
                        <div class="d-inline title-tag" style=" font-weight: bolder;">Owner</div>
                    </div>
                    <div class="title-members">Members</div>
                    {{/each}}
                    {{#each ./members}}
                    {{#each ./memberInfo}}
                    {{#if_not_equal ./user_name @root.ownerName }}
                    <div class="pt-1">
                        <div class="d-inline" style="font-size: 1.25rem;"> {{./user_name}} </div>
                        <button type="button d-inline" class="close delete-member" id="delMemBtn" aria-label="Close"
                            data-toggle="modal" data-target="#deleteMemberModal">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    {{/if_not_equal}}
                    {{/each}}
                    {{/each}}
                    <div class="row justify-content-center">
                        <div class="pt-5">
                            <button type="button" class="btn btn-primary addBtn" id="addBtn" data-toggle="modal"
                                data-target="#addMoreMemberModal">Add people</button>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="pt-2">
                            <button type="button" class="btn btn-secondary delBtn" id="delTeaBtn" data-toggle="modal"
                                data-target="#deleteTeamModal">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="row">

    </div>
</div>